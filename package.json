{
  "name": "adct-ch-api",
  "version": "0.1.0",
  "description": "REST API for ADCT Consent HUB",
  "main": "src/app.ts",
  "scripts": {
    "start": "nps",
    "build": "npm start build",
    "presetup": "yarn install",
    "setup": "npm start config && npm start setup.script",
    "seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
    "seed:run": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed",
    "schema:drop": "ts-node ./node_modules/typeorm/cli.js schema:drop",
    "schema:sync": "ts-node ./node_modules/typeorm/cli.js schema:sync",
    "lint:tslint": "tslint -c ./tslint.json src/**/*.ts --format stylish",
    "lint:eslint": "eslint --ext src/**/*.ts",
    "lint:staged": "lint-staged",
    "prettify": "prettier --write"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "chalk": "^2.4.1",
    "class-validator": "^0.9.1",
    "class-validator-jsonschema": "1.3.0",
    "commander": "^2.19.0",
    "compression": "^1.7.1",
    "copyfiles": "^2.1.0",
    "cors": "^2.8.4",
    "dataloader": "^1.3.0",
    "dotenv": "6.0.0",
    "event-dispatch": "^0.4.1",
    "express": "^4.16.2",
    "express-basic-auth": "^1.1.3",
    "express-graphql": "^0.12.0",
    "express-status-monitor": "^1.0.1",
    "faker": "^4.1.0",
    "figlet": "^1.2.0",
    "glob": "^7.1.2",
    "graphql": "14.0.2",
    "helmet": "^3.9.0",
    "jsonfile": "5.0.0",
    "microframework-w3tec": "^0.6.3",
    "morgan": "^1.9.0",
    "mysql": "^2.16.0",
    "nodemon": "^1.12.1",
    "nps": "^5.9.3",
    "nps-utils": "^1.5.0",
    "pg": "^7.4.3",
    "reflect-metadata": "^0.1.10",
    "routing-controllers": "^0.7.6",
    "routing-controllers-openapi": "^2.2.0",
    "serve-favicon": "^2.4.5",
    "supertest": "^3.0.0",
    "swagger-ui-express": "^4.1.6",
    "ts-node": "7.0.1",
    "tslint": "^5.8.0",
    "type-graphql": "^0.15.0",
    "typedi": "0.8.0",
    "typeorm": "^0.2.5",
    "typeorm-seeding": "^1.6.1",
    "typeorm-typedi-extensions": "^0.2.1",
    "typescript": "^3.6.3",
    "uuid": "^3.3.2",
    "winston": "3.1.0"
  },
  "resolutions": {
    "**/event-stream": "^4.0.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/test/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "./test/unit/lib/setup.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.18",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.1",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.0.39",
    "@types/faker": "^5.1.5",
    "@types/figlet": "^1.2.0",
    "@types/helmet": "0.0.41",
    "@types/jest": "23.3.2",
    "@types/jsonfile": "^6.0.0",
    "@types/morgan": "^1.7.35",
    "@types/nock": "^9.1.3",
    "@types/node": "^12.7.5",
    "@types/serve-favicon": "^2.2.29",
    "@types/supertest": "^2.0.4",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^3.4.3",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "cross-env": "^5.1.1",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-module-resolver": "^1.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "23.6.0",
    "lint-staged": "^10.5.3",
    "mock-express-request": "^0.2.0",
    "mock-express-response": "^0.2.1",
    "ncp": "^2.0.0",
    "nock": "10.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.2.1",
    "sqlite3": "^4.0.0",
    "ts-jest": "23.10.1"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint:tslint",
      "yarn lint:eslint",
      "git add --force"
    ],
    "*.json": [
      "prettier --write",
      "git add --force"
    ]
  },
  "pre-commit": "lint:staged"
}
